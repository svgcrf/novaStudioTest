{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "nova-primary",
                    "color": "#2563EB",
                    "name": "Primary Blue"
                },
                {
                    "slug": "nova-primary-dark",
                    "color": "#1D4ED8",
                    "name": "Primary Dark"
                },
                {
                    "slug": "nova-accent",
                    "color": "#F59E0B",
                    "name": "Accent Orange"
                },
                {
                    "slug": "nova-dark",
                    "color": "#0F172A",
                    "name": "Dark"
                },
                {
                    "slug": "nova-gray",
                    "color": "#64748B",
                    "name": "Gray"
                },
                {
                    "slug": "nova-light",
                    "color": "#F8FAFC",
                    "name": "Light"
                },
                {
                    "slug": "nova-white",
                    "color": "#FFFFFF",
                    "name": "White"
                }
            ],
            "defaultPalette": false,
            "defaultGradients": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Plus Jakarta Sans', sans-serif",
                    "slug": "nova-heading",
                    "name": "Plus Jakarta Sans"
                },
                {
                    "fontFamily": "'Inter', sans-serif",
                    "slug": "nova-body",
                    "name": "Inter"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "2.25rem",
                    "name": "2X Large"
                },
                {
                    "slug": "huge",
                    "size": "3rem",
                    "name": "Huge"
                }
            ]
        },
        "spacing": {
            "units": ["px", "em", "rem", "%", "vw", "vh"],
            "spacingSizes": [
                {
                    "slug": "10",
                    "size": "0.5rem",
                    "name": "XS"
                },
                {
                    "slug": "20",
                    "size": "1rem",
                    "name": "SM"
                },
                {
                    "slug": "30",
                    "size": "1.5rem",
                    "name": "MD"
                },
                {
                    "slug": "40",
                    "size": "2rem",
                    "name": "LG"
                },
                {
                    "slug": "50",
                    "size": "3rem",
                    "name": "XL"
                },
                {
                    "slug": "60",
                    "size": "4rem",
                    "name": "2XL"
                }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--nova-white)",
            "text": "var(--wp--preset--color--nova-dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--nova-body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--nova-heading)",
                    "fontWeight": "700"
                },
                "color": {
                    "text": "var(--wp--preset--color--nova-dark)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--nova-primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--nova-primary-dark)"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--nova-primary)",
                    "text": "var(--wp--preset--color--nova-white)"
                },
                "border": {
                    "radius": "0.5rem"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--nova-primary-dark)"
                    }
                }
            }
        }
    }
}
